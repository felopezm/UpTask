mixin addProject(project = {})
    

    form.agregar-proyecto(action=`/new-project/${project.id || ''}` method="POST")
            .campo
                label(for="nombre") Name Project
                input(value=project.name type="text" id="name" name="name" placeholder="Name Project..")
            .campo.enviar
                input(type="submit" value=`${project.name ? 'Save':'Add'}` class="boton")